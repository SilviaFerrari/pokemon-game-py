    '#              #o        #  #',
    '#        oooooo###oo  #  #  #',
    '#  o#o#o########o###  o  #  #',
    '#  #########  o    #  o  #  #',
    '#  #       #       o     #  #',
    '#  #       #    o     o  #  #',
    '#     oo   #  o #     #  #  #',
    '#     ##      # #  o  #     #',
    '#############################']
for i in level_1:
    for c in i:
        if c == ' ':
            pass
        elif c == 'o':
            sdg.fill(black)
            disegnaL(ll,lh)
            disegnaV(vl,vh)
            disegnatextsurface3(al,ah)
        elif c == '#':
             if xl < 0.0 or xh < 0.0 or xh > 915 or xl > 1405.0:
                 sdg.fill(black)
                 disegnaL(ll,lh)
                 disegnaV(vl,vh)
                 disegnatextsurface3(al,ah)
             else:
                 disegnaT(el,eh)
             el += 50
             eh += 50
                
        disegnaT(el,eh)
    
    
       # for g in range(0,551):
