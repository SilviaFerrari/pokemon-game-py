class Platform(pygame.sprite.Sprite):
    def __init__(self,el,eh):
        pygame.sprite.Sprite.__init__(self)
        self.image=pygame.Surface((50,50))
        self.image.load("E:\GIOCO_PYTHON\Immagini\lava.jpg")
        self.rect=self.image.get_rect()
        self.rect.el=el
        self.rect.eh=eh
        plats.add(self)
    def update(self):
        screen.blit(self.image, (self.rect.el, self.rect.eh))

T = pygame.image.load("E:\GIOCO_PYTHON\Immagini\lava.jpg")
el = 0.0
eh = 0.0
def disegnaT(el,eh):
    sdg.blit(T,(el,eh))

run = True
while run == True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False
        
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_RIGHT:
                muovi = 10
            elif event.key == pygame.K_LEFT:
                muovi = -10
            elif event.key == pygame.K_UP:
                move = -10
            elif event.key == pygame.K_DOWN:
                move = 10
            elif event.key  == pygame.K_SPACE:
                move = -20
                        
        if event.type == pygame.KEYUP:
            if event.key == pygame.K_RIGHT or event.key == pygame.K_LEFT:
                muovi = 0
            elif event.key == pygame.K_UP or event.key == pygame.K_DOWN:
                move = 0
            elif event.key == pygame.K_SPACE:
                move = 10
            
    sdg.fill(deepskyblue1)
    disegnaB(0,0)
    disegnaM(ml,mh)
    disegnatextsurface(pl,ph)
    disegnatextsurface2(sl,sh)
    #disegnaK(kl,kh)
    #disegnaJ(jl,jh)
    if xl < 0.0 or xh < 0.0 or xh > 915 or xl > 1405.0:
        sdg.fill(black)
        disegnaL(ll,lh)
        disegnaV(vl,vh)
        disegnatextsurface3(al,ah)
    
    xl = xl + muovi
    xh = xh + move
    disegnaX(xl,xh)
    
 #livello 1
el = 0
eh = 0
level_1 = [
    '#############################',
    '#P           ################',
